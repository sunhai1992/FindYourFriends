<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

      <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/returnback" />
     <TextView
        android:paddingLeft="10dp"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:text="邀请单个好友"
 	     android:textSize="18sp" 
 	   />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/searchphonumber"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_margin="10dp"
            android:layout_weight="0.04"
            android:background="@drawable/button_normal_shape"
            android:hint="@string/phonenumber"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColorHint="#b3b3b3"
            android:textSize="18sp" />

        <Button
            android:id="@+id/search"
            style="@style/My.TextView._White"
            android:layout_width="44dp"
            android:layout_height="39dp"
            android:layout_margin="10dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/common_btn"
            android:text="@string/search"
            android:onClick="searchContact"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="通讯录建群"
        android:textSize="18sp" />
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
 	<EditText
 	    android:id="@+id/groupname"
 	    android:layout_width="wrap_content"
 	    android:layout_height="39dp"
 	    android:layout_margin="10dp"
 	    android:layout_weight="0.03"
 	    android:background="@drawable/button_normal_shape"
 	    android:hint="@string/groupname"
 	    android:paddingLeft="5dp"
 	    android:singleLine="true"
 	    android:textColorHint="#b3b3b3"
 	    android:textSize="18sp" />
    
    <Button
        android:id="@+id/fromcontacts"
        style="@style/My.TextView._White"
        android:layout_width="62dp"
        android:layout_height="39dp"
        android:layout_margin="10dp"
        android:layout_marginRight="11dp"
        android:layout_weight="0.00"
        android:background="@drawable/common_btn"
        android:text="@string/contacts"
        android:onClick="selectedFromContacts"
        android:textSize="14sp" />
       </LinearLayout>
     
</LinearLayout>